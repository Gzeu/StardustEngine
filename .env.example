# StardustEngine Environment Variables
# Copy this file to .env for local development

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================
NODE_ENV=development
ENVIRONMENT=development

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================
NEXT_PUBLIC_MULTIVERSX_NETWORK=devnet
NEXT_PUBLIC_GATEWAY_URL=https://devnet-gateway.multiversx.com
NEXT_PUBLIC_API_URL=https://devnet-api.multiversx.com
NEXT_PUBLIC_EXPLORER_URL=https://devnet-explorer.multiversx.com
NEXT_PUBLIC_BASE_PATH=
NEXT_PUBLIC_API_BACKEND_URL=http://localhost:8000

# =============================================================================
# API BACKEND CONFIGURATION (Python FastAPI)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,https://stardustengine.vercel.app
MULTIVERSX_NETWORK=devnet

# =============================================================================
# MULTIVERSX BLOCKCHAIN CONFIGURATION
# =============================================================================
MULTIVERSX_GATEWAY_URL=https://devnet-gateway.multiversx.com
MULTIVERSX_API_URL=https://devnet-api.multiversx.com
MULTIVERSX_EXPLORER_URL=https://devnet-explorer.multiversx.com

# Smart Contract Addresses (update after deployment)
STARDUST_CONTRACT_ADDRESS=
NFT_CONTRACT_ADDRESS=
TOKEN_CONTRACT_ADDRESS=

# =============================================================================
# DATABASE CONFIGURATION (if needed)
# =============================================================================
# DATABASE_URL=postgresql://username:password@localhost:5432/stardustengine
# MONGODB_URI=mongodb://localhost:27017/stardustengine

# =============================================================================
# EXTERNAL SERVICES (optional)
# =============================================================================
# PINATA_API_KEY=your_pinata_api_key
# PINATA_SECRET_API_KEY=your_pinata_secret_key
# IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# JWT_SECRET=your_jwt_secret_key_here
# ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# VERCEL_TOKEN=your_vercel_token
# VERCEL_ORG_ID=your_vercel_org_id
# VERCEL_PROJECT_ID=your_vercel_project_id

# =============================================================================
# MONITORING & ANALYTICS (optional)
# =============================================================================
# SENTRY_DSN=your_sentry_dsn
# GOOGLE_ANALYTICS_ID=your_ga_id
# MIXPANEL_TOKEN=your_mixpanel_token