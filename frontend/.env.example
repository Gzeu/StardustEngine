# StardustEngine Environment Configuration
# Copy this to .env.local and update values

# MultiversX Network Configuration
NEXT_PUBLIC_MULTIVERSX_NETWORK=devnet
NEXT_PUBLIC_GATEWAY_URL=https://devnet-gateway.multiversx.com
NEXT_PUBLIC_API_URL=https://devnet-api.multiversx.com
NEXT_PUBLIC_EXPLORER_URL=https://devnet-explorer.multiversx.com

# StardustEngine Smart Contract
NEXT_PUBLIC_CONTRACT_ADDRESS=erd1hek3gle53u9xcya7r56t4uppnwr98u477hdjrm0l6l47zf708n9s769wf7

# IPFS Gateway for NFT Metadata
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
# Alternative gateways:
# NEXT_PUBLIC_IPFS_GATEWAY=https://cloudflare-ipfs.com/ipfs/
# NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_CHAIN_ID=D

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Feature Flags
NEXT_PUBLIC_ENABLE_SOUND=true
NEXT_PUBLIC_ENABLE_PARTICLES=true
NEXT_PUBLIC_ENABLE_3D=true

# Performance
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false