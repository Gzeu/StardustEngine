# StardustEngine Frontend Environment Configuration

# =============================================================================
# MULTIVERSX NETWORK CONFIGURATION
# =============================================================================

# Network Environment (devnet, testnet, mainnet)
NEXT_PUBLIC_MULTIVERSX_NETWORK=devnet

# Network Chain ID
NEXT_PUBLIC_CHAIN_ID=D

# =============================================================================
# API ENDPOINTS
# =============================================================================

# MultiversX Gateway API
NEXT_PUBLIC_GATEWAY_URL=https://devnet-gateway.multiversx.com

# MultiversX API
NEXT_PUBLIC_API_URL=https://devnet-api.multiversx.com

# MultiversX Explorer
NEXT_PUBLIC_EXPLORER_URL=https://devnet-explorer.multiversx.com

# =============================================================================
# SMART CONTRACT ADDRESSES
# =============================================================================

# StardustEngine Gaming Contract Address
# Replace with your deployed contract address
NEXT_PUBLIC_CONTRACT_ADDRESS=erd1qqqqqqqqqqqqqpgqmhm6kg3mj3k0w9a3nda9xuw4tac3n5zx2jps8rp6sd

# Alternative contract for testing
NEXT_PUBLIC_TEST_CONTRACT_ADDRESS=

# =============================================================================
# GAMING PLATFORM SETTINGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_TOURNAMENTS=true
NEXT_PUBLIC_ENABLE_ACHIEVEMENTS=true
NEXT_PUBLIC_ENABLE_ASSET_TRADING=true

# Asset minting costs (in EGLD wei - 18 decimals)
NEXT_PUBLIC_MINT_COST_COMMON=1000000000000000000
NEXT_PUBLIC_MINT_COST_RARE=2000000000000000000
NEXT_PUBLIC_MINT_COST_EPIC=5000000000000000000
NEXT_PUBLIC_MINT_COST_LEGENDARY=10000000000000000000

# Gas limits for transactions
NEXT_PUBLIC_GAS_LIMIT_REGISTER=5000000
NEXT_PUBLIC_GAS_LIMIT_MINT=15000000
NEXT_PUBLIC_GAS_LIMIT_TRANSFER=10000000
NEXT_PUBLIC_GAS_LIMIT_TOURNAMENT=12000000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development mode
NEXT_PUBLIC_DEV_MODE=true

# Enable debugging
NEXT_PUBLIC_DEBUG=true

# Mock data for development
NEXT_PUBLIC_USE_MOCK_DATA=false

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Wallet Connect Project ID (optional)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Web Wallet URLs
NEXT_PUBLIC_WEB_WALLET_URL=https://devnet-wallet.multiversx.com

# =============================================================================
# FRONTEND CUSTOMIZATION
# =============================================================================

# App Information
NEXT_PUBLIC_APP_NAME="StardustEngine"
NEXT_PUBLIC_APP_DESCRIPTION="Next-generation NFT Gaming Platform on MultiversX"
NEXT_PUBLIC_APP_VERSION="2.0.0"

# Social Links
NEXT_PUBLIC_GITHUB_URL=https://github.com/Gzeu/StardustEngine
NEXT_PUBLIC_DISCORD_URL=
NEXT_PUBLIC_TWITTER_URL=

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry (optional)
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# NETWORK-SPECIFIC CONFIGURATIONS
# =============================================================================

# For Testnet deployment, change these:
# NEXT_PUBLIC_MULTIVERSX_NETWORK=testnet
# NEXT_PUBLIC_CHAIN_ID=T
# NEXT_PUBLIC_GATEWAY_URL=https://testnet-gateway.multiversx.com
# NEXT_PUBLIC_API_URL=https://testnet-api.multiversx.com
# NEXT_PUBLIC_EXPLORER_URL=https://testnet-explorer.multiversx.com
# NEXT_PUBLIC_WEB_WALLET_URL=https://testnet-wallet.multiversx.com

# For Mainnet deployment, change these:
# NEXT_PUBLIC_MULTIVERSX_NETWORK=mainnet
# NEXT_PUBLIC_CHAIN_ID=1
# NEXT_PUBLIC_GATEWAY_URL=https://gateway.multiversx.com
# NEXT_PUBLIC_API_URL=https://api.multiversx.com
# NEXT_PUBLIC_EXPLORER_URL=https://explorer.multiversx.com
# NEXT_PUBLIC_WEB_WALLET_URL=https://wallet.multiversx.com